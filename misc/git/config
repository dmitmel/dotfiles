# vim: ft=gitconfig

[color]
  ui = true

[pull]
  rebase = true

[merge]
  autoStash = true

[rebase]
  autoStash = true

[core]
  pager = find-git-diff-highlighter | less --RAW-CONTROL-CHARS

# Settings for <https://github.com/git/git/tree/master/contrib/diff-highlight>
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

# <https://git-scm.com/docs/git-config#Documentation/git-config.txt-colordiffslot>
[color "diff"]
  meta = yellow
  frag = blue bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

# Default tig(1) settings: <https://github.com/jonas/tig/blob/master/tigrc>
[tig "color"]
  cursor      = black white bold
  cursor-blur = black white
  title-focus = black blue bold
  title-blur  = black blue

[alias]
  initial-commit = commit --message 'initial commit' --allow-empty
  unstage = restore --staged

[init]
  defaultBranch = master
