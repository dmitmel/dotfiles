{
  "conf": {
    "prefix": "conf",
    "description": "vimspector: a basic config file",
    "body": [
      "{",
      "\t\"$schema\": \"https://puremourning.github.io/vimspector/schema/vimspector.schema.json\",",
      "\t\"configurations\": {",
      "\t\t$0",
      "\t}",
      "}"
    ]
  },
  "launch": {
    "prefix": "launch",
    "description": "vimspector: launch configuration",
    "body": [
      "\"${1:Configuration Name}\": {",
      "\t\"adapter\": \"${2:adapter}\",",
      "\t\"configuration\": {",
      "\t\t\"request\": \"launch\",",
      "\t\t\"program\": \"${workspaceFolder}/${3:<program>}\",",
      "\t\t\"args\": []$0",
      "\t}",
      "}"
    ]
  },
  "attach": {
    "prefix": "attach",
    "description": "vimspector: attach configuration",
    "body": [
      "\"${1:Configuration Name}\": {",
      "\t\"adapter\": \"${2:adapter}\",",
      "\t\"configuration\": {",
      "\t\t\"request\": \"attach\",",
      "\t\t\"program\": \"${workspaceFolder}/${3:<program>}\"$0",
      "\t}",
      "}"
    ]
  }
}
