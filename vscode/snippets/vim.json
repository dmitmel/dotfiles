{
  "function": {
    "prefix": "function",
    "description": "function",
    "body": [
      "function! $1($2) abort", //
      "\t$0",
      "endfunction"
    ]
  },
  "augroup": {
    "prefix": "augroup",
    "description": "autocommand group",
    "body": [
      "augroup dotfiles_$1", //
      "\tautocmd!",
      "\tautocmd $0",
      "augroup END"
    ]
  },
  "if": {
    "prefix": "if",
    "description": "if block",
    "body": [
      "if ${1:condition}", //
      "\t$0",
      "endif"
    ]
  },
  "for": {
    "prefix": "for",
    "description": "for loop",
    "body": [
      "for ${1:var} in ${2:container}", //
      "\t$0",
      "endfor"
    ]
  },
  "while": {
    "prefix": "while",
    "description": "while loop",
    "body": [
      "while ${1:condition}", //
      "\t$0",
      "endwhile"
    ]
  },
  "try": {
    "prefix": "try",
    "description": "try-catch block",
    "body": [
      "try", //
      "\t$0",
      "catch /.*/",
      "",
      "endtry"
    ]
  },
  "luablock": {
    "prefix": "luablock",
    "description": "lua <<EOF",
    "body": [
      "lua <<EOF", //
      "$0",
      "EOF"
    ]
  }
}
