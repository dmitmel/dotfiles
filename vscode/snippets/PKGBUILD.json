      "",
      "\tcd \"\\$pkgbase-\\$pkgver\"",
      "\tmake DESTDIR=\"\\$pkgdir/\" install-pkg2",
      "}"
    ]
  },
  "vcs!": {
    "prefix": "vcs!",
    "description": "Template for a VCS package (/usr/share/pacman/PKGBUILD-vcs.proto)",,
    "body": [
      "# This is an example PKGBUILD file. Use this as a start to creating your own,",
      "# and remove these comments. For more information, see 'man PKGBUILD'.",
      "# NOTE: Please fill out the license field for your package! If it is unknown,",
      "# then please put 'unknown'.",
      "$0",
      "# The following guidelines are specific to BZR, GIT, HG and SVN packages.",
      "# Other VCS sources are not natively supported by makepkg yet.",
      "",
      "# Maintainer: Your Name <youremail@domain.com>",
      "pkgname=NAME-VCS # '-bzr', '-git', '-hg' or '-svn'",
      "pkgver=VERSION",
      "pkgrel=1",
      "pkgdesc=\"\"",
      "arch=()",
      "url=\"\"",
      "license=('GPL')",
      "groups=()",
      "depends=()",
      "makedepends=('VCS_PACKAGE') # 'bzr', 'git', 'mercurial' or 'subversion'",
      "provides=(\"\\${pkgname%-VCS}\")",
      "conflicts=(\"\\${pkgname%-VCS}\")",
      "replaces=()",
      "backup=()",
      "options=()",
      "install=",
      "source=('FOLDER::VCS+URL#FRAGMENT')",
      "noextract=()",
      "md5sums=('SKIP')",
      "",
      "# Please refer to the 'USING VCS SOURCES' section of the PKGBUILD man page for",
      "# a description of each element in the source array.",
      "",
      "pkgver() {",
      "\tcd \"\\$srcdir/\\${pkgname%-VCS}\"",
      "",
      "# The examples below are not absolute and need to be adapted to each repo. The",
      "# primary goal is to generate version numbers that will increase according to",
      "# pacman's version comparisons with later commits to the repo. The format",
      "# VERSION='VER_NUM.rREV_NUM.HASH', or a relevant subset in case VER_NUM or HASH",
      "# are not available, is recommended.",
      "",
      "# Bazaar",
      "\tprintf \"r%s\" \"\\$(bzr revno)\"",
      "",
      "# Git, tags available",
      "\tprintf \"%s\" \"\\$(git describe --long | sed 's/\\([^-]*-\\)g/r\\1/;s/-/./g')\"",
      "",
      "# Git, no tags available",
      "\tprintf \"r%s.%s\" \"\\$(git rev-list --count HEAD)\" \"\\$(git rev-parse --short HEAD)\"",
      "",
      "# Mercurial",
      "\tprintf \"r%s.%s\" \"\\$(hg identify -n)\" \"\\$(hg identify -i)\"",
      "",
      "# Subversion",
      "\tprintf \"r%s\" \"\\$(svnversion | tr -d 'A-z')\"",
      "}",
      "",
      "prepare() {",
      "\tcd \"\\$srcdir/\\${pkgname%-VCS}\"",
      "\tpatch -p1 -i \"\\$srcdir/\\${pkgname%-VCS}.patch\"",
      "}",
      "",
      "build() {",
      "\tcd \"\\$srcdir/\\${pkgname%-VCS}\"",
      "\t./autogen.sh",
      "\t./configure --prefix=/usr",
      "\tmake",
      "}",
      "",
      "check() {",
      "\tcd \"\\$srcdir/\\${pkgname%-VCS}\"",
      "\tmake -k check",
      "}",
      "",
      "package() {",
      "\tcd \"\\$srcdir/\\${pkgname%-VCS}\"",
      "\tmake DESTDIR=\"\\$pkgdir/\" install",
      "}"
    ]
  }
}
