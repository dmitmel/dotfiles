      "\tlicense=()",
      "\tgroups=()",
      "\tdepends=()",
      "\toptdepends=()",
      "\tprovides=()",
      "\tconflicts=()",
      "\treplaces=()",
      "\tbackup=()",
      "\toptions=()",
      "\tinstall=",
      "\tchangelog=",
      "",
      "\tcd \"\\$pkgbase-\\$pkgver\"",
      "\tmake DESTDIR=\"\\$pkgdir/\" install-pkg1",
      "}",
      "",
      "package_pkg2() {",
      "\t# options and directives overrides",
